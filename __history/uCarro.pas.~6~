unit uCarro;

interface

Type
  TCarro = Class
    Modelo: String;
    Marca: String;
    Ano: Integer;
    Preco: real;
    procedure mensagem;
  End;

implementation

uses dialogs,
  System.SysUtils;
{ TCarro }
{ TCarro }

procedure TCarro.mensagem;
begin
  showmessage('O veículo do modelo ' + Modelo + ', pertencente a marca ' + Marca
    + ', com sua fabricação no ano de ' + IntToStr(Ano) +
    ' , Com o valor de ' + IntToStr(Preco) + ' reais, foi cadastrado');
end;

end.
